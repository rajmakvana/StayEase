<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
    <h2 class="col-lg-6 col-md-10  offset-lg-3 offset-sm-1 offset-0"> LogIn for Airbnb</h2>
    <div class="col-lg-6 col-md-10  offset-lg-3 offset-sm-1 offset-0">

        <form action="/login"  method="post" novalidate class="needs-validation">

            <div class="mb-3">
                <label for="username" class="form-lable">Username</label>
                <input
                  type="text"
                  name="username"
                  class="form-control"
                  id="username"
                  required
                />
            
            </div>

            <div class="mb-3">
                <label for="password" class="form-lable">Password</label>
                <input
                  type="password"
                  name="password"
                  class="form-control"
                  id="password"
                  required
                />
            </div>

            <button class="btn btn-success"> LogIn</button>

        </form>

    </div>
</div>