<% layout('/layouts/boilerplate') %>
<body>
  <div class="row">
    <div class="col-6 offset-3">
      <div class="card mt-3 listing-card">
        <h5><%= listing.title %></h5>
        <img
          src="<%= listing.image %>"
          class="card-img-top show-image mt-2"
          alt="LIsting Image"
        />
        <div class="card-body">
          <p class="card-text mt-3 col-11">
            <%= listing.description %>
            <br />
            &#8377;<%= listing.price.toLocaleString("en-IN") %>
            <br />
            <%= listing.location %>
            <br />
            <%= listing.country %>
          </p>
        </div>

        <div class="show-btn mt-3">
          <a
            href="/Listings/<%= listing._id %>/edit"
            class="btn btn-dark add-btn"
            >Edit This Listing</a
          >
          <form
            action="/Listings/<%= listing._id %>?_method=DELETE"
            method="post"
          >
            <button class="btn btn-outline-dark">Delete</button>
          </form>
        </div>
      </div>

      <hr />

      <!-- ** Review Section ** -->

      <div class="col-12 ">
        <h4>Leave a Review</h4>
        <form
          action="/Listings/<%= listing._id %>/review"
          method="POST"
          novalidate
          class="needs-validation"
        >
          <div class="mb-3 mt-3">
            <label for="rating" class="form-lable">Rating</label>
            <input
              type="range"
              min="1"
              max="5"
              id="rating"
              name="review[rating]"
              class="form-range"
            />
          </div>

          <div class="mb-3 mt-3">
            <label for="commet" class="form-lable"> Comments </label>
            <textarea
              type="range"
              name="review[commet]"
              id="commet"
              cols="30"
              rows="5"
              class="form-control"
              required
            ></textarea>
            <div class="invalid-feedback">
              Please add some comment for review
            </div>
          </div>

          <button class="btn btn-outline-dark mb-4">Submit</button>
        </form>
      </div>


      <hr>
      <h4>All Reviews </h4>

    <div class="row">
    <ul>
      <% for(review of listing.reviews){ %>
        <div class="card col-12 mt-3 p-2 ">
            <div class="card-body">
                <h5 class="card-title"> Joe doe </h5>
                <p class="card-text"> <%= review.commet %> </p>
                <p class="card-text"> Rating : <%= review.rating %> Star</p>
            </div>
            <form action="/Listings/<%= listing._id %>/review/<%= review._id %>?_method=DELETE" class="mt-3" method="post">
              <button class="btn btn-sm btn-outline-dark " > Delete </button>
            </form>
        </div>
      <% } %>
    </ul>
    </div>

    

    </div>
  </div>
</body>
