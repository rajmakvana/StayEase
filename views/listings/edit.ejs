<% layout('/layouts/boilerplate') %>
<body>
    <div class="row row-mrg ">
        <div class="col-7 offset-2">
       
    <form action="/Listings/<%= listing._id %>/?_method=PUT" method="post" novalidate class="needs-validation"> 

        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input type="text" name="listing[title]" value="<%= listing.title %> " class="form-control" required>
            <div class="valid-feedback">
                Title looks good!
            </div>
        </div>
        
        <div class="mb-3"> 
            <label for="description" class="form-lable">Description</label>
            <textarea type="text" name="listing[description]" class="form-control" required> <%= listing.description %></textarea>
            <div class="invalid-feedback">
                Please enter short description
            </div>
        </div>
        

        <div class="mb-3">
            <label for="image" class="form-lable">Image URL</label>
            <input type="text" name="listing[image]" value="<%= listing.image %>"class="form-control" required>
            <div class="invalid-feedback">
                Please enter image Link/URL
            </div>
        </div>

        <div class="mb-3 col-5">
            <label for="location" class="form-lable">Location</label>
            <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
            <div class="invalid-feedback">
                Location should be valid
            </div>
        </div>

        <div class="row">
            <div class="mb-3 col-4">
                <label for="price" class="form-lable">Price</label>
                <input type="number" name="listing[price]" value="<%= listing.price %>"class="form-control" required>
                <div class="invalid-feedback">
                    Pirce should be valid
                 </div>
            </div>
        
            <div class="mb-3 col-5">
                <label for="country" class="form-lable">Country</label>
                <input type="text" name="listing[country]" value="<%= listing.country %>"class="form-control" required>
                <div class="invalid-feedback">
                    Country name should be valid
                 </div>
            </div>
        </div>

        <button type="submit" class="btn btn-dark add-btn mb-3">Update Listing</button>

        </div>
        </div>

    </form>

    <script src="/javaScript/script.js"></script>
</body>
